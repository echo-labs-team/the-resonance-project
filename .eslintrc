{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "react-hooks", "react-native"],
  "env": {
    "react-native/react-native": true,
    "jest": true
  },
  "settings": {},
  "rules": {
    // Possible errors
    "no-await-in-loop": "error",
    "no-extra-parens": "off", // Has issues w/ prettier
    "no-prototype-builtins": "off",
    "no-template-curly-in-string": "error",
    "valid-jsdoc": "off",

    // Best practices
    "no-console": "warn",
    "accessor-pairs": "error",
    "array-callback-return": "error",
    "block-scoped-var": "error",
    "class-methods-use-this": "off",
    "complexity": "error",
    "consistent-return": "off",
    "curly": "error",
    "default-case": "error",
    "dot-location": "off", // Conflicts w/ prettier
    "dot-notation": "error",
    "eqeqeq": "off",
    "guard-for-in": "off",
    "max-classes-per-file": "off",
    "no-alert": "error",
    "no-caller": "error",
    "no-div-regex": "error",
    "no-else-return": "error",
    "no-empty-function": "error",
    "no-eq-null": "error",
    "no-eval": "error",
    "no-extend-native": "error",
    "no-extra-bind": "error",
    "no-extra-label": "error",
    "no-floating-decimal": "off", // Conflicts w/ prettier
    "no-implicit-coercion": "error",
    "no-implicit-globals": "error",
    "no-implied-eval": "error",
    "no-invalid-this": "off",
    "no-iterator": "error",
    "no-labels": "error",
    "no-lone-blocks": "error",
    "no-loop-func": "error",
    "no-magic-numbers": "off",
    "no-multi-spaces": "off", // Conflicts w/ prettier
    "no-multi-str": "error",
    "no-new": "error",
    "no-new-func": "error",
    "no-new-wrappers": "error",
    "no-octal-escape": "error",
    "no-param-reassign": "off",
    "no-proto": "error",
    "no-restricted-properties": "error",
    "no-return-assign": "error",
    "no-return-await": "error",
    "no-script-url": "error",
    "no-self-compare": "error",
    "no-sequences": "error",
    "no-throw-literal": "error",
    "no-unmodified-loop-condition": "error",
    "no-unused-expressions": "error",
    "no-useless-call": "error",
    "no-useless-concat": "error",
    "no-useless-return": "error",
    "no-void": "error",
    "no-warning-comments": "off",
    "no-with": "error",
    "prefer-promise-reject-errors": "error",
    "radix": "error",
    "require-await": "off",
    "vars-on-top": "error",
    "wrap-iife": "off", // Conflicts w/ prettier
    "yoda": "error",

    // Strict
    "strict": "off",

    // Variables
    "init-declarations": "off",
    "no-label-var": "error",
    "no-restricted-globals": "error",
    "no-shadow": "error",
    "no-shadow-restricted-names": "error",
    "no-undef-init": "error",
    "no-undefined": "off",
    "no-use-before-define": "off",
    "no-unused-vars": "warn",

    // Node.js and Common.js
    "callback-return": "error",
    "global-require": "off",
    "handle-callback-err": "error",
    "no-buffer-constructor": "off",
    "no-mixed-requires": "error",
    "no-new-require": "error",
    "no-path-concat": "error",
    "no-process-env": "off",
    "no-process-exit": "off",
    "no-restricted-modules": "error",
    "no-sync": "error",

    // Stylistic issues
    "array-bracket-newline": "off", // Conflicts w/ prettier
    "array-bracket-spacing": "off", // Conflicts w/ prettier
    "array-element-newline": "off",
    "block-spacing": "off", // Conflicts w/ prettier
    "brace-style": "off", // Conflicts w/ prettier
    "camelcase": "off",
    "capitalized-comments": "off",
    "comma-dangle": "off", // Conflicts w/ prettier
    "comma-spacing": "off", // Conflicts w/ prettier
    "comma-style": "off", // Conflicts w/ prettier
    "computed-property-spacing": "off", // Conflicts w/ prettier
    "consistent-this": "error",
    "eol-last": "off", // Conflicts w/ prettier
    "func-call-spacing": "off", // Conflicts w/ prettier
    "func-name-matching": "error",
    "func-names": "off",
    "func-style": "off",
    "function-paren-newline": "off", // Conflicts w/ prettier
    "id-blacklist": "error",
    "id-length": "off",
    "id-match": "error",
    "implicit-arrow-linebreak": "off", // Conflicts w/ prettier
    "indent": "off", // Conflicts w/ prettier
    "jsx-quotes": "off",
    "key-spacing": "off", // Conflicts w/ prettier
    "keyword-spacing": "off", // Conflicts w/ prettier
    "line-comment-position": "off",
    "linebreak-style": "error",
    "lines-around-comment": "off", // Conflicts w/ prettier
    "lines-between-class-members": "error",
    "max-depth": "off",
    "max-len": "off",
    "max-lines": "off",
    "max-lines-per-function": "off",
    "max-nested-callbacks": "off",
    "max-params": "off",
    "max-statements": "off",
    "max-statements-per-line": "off",
    "multiline-comment-style": "off",
    "multiline-ternary": "off",
    "new-cap": "off",
    "new-parens": "off", // Conflicts w/ prettier
    "newline-after-var": "warn",
    "newline-per-chained-call": "off", // Conflicts w/ prettier
    "no-array-constructor": "error",
    "no-bitwise": "error",
    "no-continue": "off",
    "no-inline-comments": "off",
    "no-lonely-if": "error",
    "no-mixed-operators": "off", // Conflicts w/ prettier
    "no-multi-assign": "error",
    "no-multiple-empty-lines": "off", // Conflicts w/ prettier
    "no-negated-condition": "error",
    "no-nested-ternary": "error",
    "no-new-object": "error",
    "no-plusplus": "off",
    "no-restricted-syntax": "error",
    "no-tabs": "off", // Conflicts w/ prettier
    "no-ternary": "off",
    "no-trailing-spaces": "off", // Conflicts w/ prettier
    "no-underscore-dangle": "off",
    "no-unneeded-ternary": "error",
    "no-whitespace-before-property": "off", // Conflicts w/ prettier
    "nonblock-statement-body-position": "off", // Conflicts w/ prettier
    "object-curly-newline": "off",
    "object-curly-spacing": "off", // Conflicts w/ prettier
    "object-property-newline": "off",
    "one-var": "off",
    "one-var-declaration-per-line": "off", // Conflicts w/ prettier
    "operator-assignment": "error",
    "operator-linebreak": "off", // Conflicts w/ prettier
    "padded-blocks": "off",
    "padding-line-between-statements": "error",
    "prefer-object-spread": "off",
    "quote-props": "off",
    "quotes": "off", // Conflicts w/ prettier
    "require-jsdoc": "off",
    "semi": "off", // Conflicts w/ prettier
    "semi-spacing": "off", // Conflicts w/ prettier
    "semi-style": "off", // Conflicts w/ prettier
    "sort-keys": "off",
    "sort-vars": "error",
    "space-before-blocks": "off", // Conflicts w/ prettier
    "space-before-function-paren": "off",
    "space-in-parens": "off", // Conflicts w/ prettier
    "space-infix-ops": "off", // Conflicts w/ prettier
    "space-unary-ops": "off", // Conflicts w/ prettier
    "spaced-comment": "error",
    "switch-colon-spacing": "off", // Conflicts w/ prettier
    "template-tag-spacing": "off", // Conflicts w/ prettier
    "unicode-bom": "off", // Conflicts w/ prettier
    "wrap-regex": "off", // Conflicts w/ prettier

    // ES6
    "arrow-body-style": "off",
    "arrow-parens": "off",
    "arrow-spacing": "off",
    "generator-star-spacing": "off",
    "no-confusing-arrow": "off",
    "no-duplicate-imports": "error",
    "no-restricted-imports": "error",
    "no-this-before-super": "error",
    "no-useless-computed-key": "error",
    "no-useless-constructor": "error",
    "no-useless-rename": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-arrow-callback": "error",
    "prefer-const": "error",
    "prefer-destructuring": ["error", { "object": true }],
    "prefer-numeric-literals": "error",
    "prefer-rest-params": "error",
    "prefer-spread": "error",
    "prefer-template": "error",
    "rest-spread-spacing": "off", // Conflicts w/ prettier
    "sort-imports": "off",
    "symbol-description": "error",
    "template-curly-spacing": "off", // Conflicts w/ prettier
    "yield-star-spacing": "off", // Conflicts w/ prettier

    // react
    "react/prop-types": "off",
    "react/display-name": "off",

    // react-native
    "react-native/no-unused-styles": 1,
    "react-native/split-platform-components": 2,
    "react-native/no-inline-styles": 1,
    "react-native/no-color-literals": 1,
    "react-native/no-raw-text": 0 // we have wrapper components and the app will error anyways
  }
}
